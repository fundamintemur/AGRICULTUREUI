@model EntityLayer.Concrete.Admin
@{
    ViewData["Title"] = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Admin Girişi</h4>

            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Kullanıcı Adı</label>
                    <input type="text" class="form-control" placeholder="kullanıcıadı" asp-for="UserName">
                </div>
                
                <div class="form-group">
                    <label>Şifre</label>
                    <input type="text" class="form-control" placeholder="şifre" asp-for="Password">
                </div>

                <button type="submit" class="btn btn-outline-primary me-2">Kaydet</button>
                @*  <a href="/Service/Index/" class="btn btn-outline-success">Vazgeç</a> *@
            </form>
        </div>
    </div>
</div>