@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "EditTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Detayları Sayfası</h4>

            <form class="forms-sample" method="post">
                <div class="form-group">
                    @Html.HiddenFor(x=>x.ContactId)
                    <label for="exampleInputName1">Adı Soyadı</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="adsoyad" asp-for="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail Adresi</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="mail adresi" asp-for="Mail">
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">Tarih</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="tarih" asp-for="Date">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mesaj Detayı</label>
                    <textarea class="form-control" cols="5" rows="20" asp-for="Message"></textarea>
                </div>
                
                <button type="submit" class="btn btn-outline-primary me-2">Kaydet</button>
                @*  <a href="/Service/Index/" class="btn btn-outline-success">Vazgeç</a> *@
            </form>
        </div>
    </div>
</div>


