@model EntityLayer.Concrete.Service@{    ViewData["Title"] = "EditService";    Layout = "~/Views/Shared/_AdminLayout.cshtml";}<div class="col-12 grid-margin stretch-card">    <div class="card">        <div class="card-body">            <h4 class="card-title">Hizmet Düzenleme Sayfası</h4>            <form class="forms-sample" method="post">                @Html.HiddenFor(x=>x.ServiceID)           <div class="form-group">                    <label for="exampleInputName1">Başlık</label>                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Name" asp-for="Title">                </div>                <div class="form-group">                    <label for="exampleInputEmail3">Görsel</label>                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Email" asp-for="Image">                </div>                <div class="form-group">                    <label for="exampleTextarea1">Açıklama</label>                    <textarea class="form-control" id="exampleTextarea1" rows="4" asp-for="Description"></textarea>                </div>                <button type="submit" class="btn btn-outline-primary me-2">Kaydet</button>                <a href="/Service/Index/" class="btn btn-outline-success">Vazgeç</a>            </form>        </div>    </div></div>@* <form method="post">    @Html.HiddenFor(x=>x.ServiceID)    <div class="form-group">        @Html.Label("Başlık")                <input type="text" asp-for="Title" class="form-control" />    </div>    <div class="form-group">        @Html.Label("Görsel Yolu")                <input type="text" asp-for="Image" class="form-control" />    </div>    <div class="form-group">        @Html.Label("Açıklama")                <input type="text" asp-for="Description" class="form-control" />    </div>    <br />    <button class="btn btn-outline-info">Değişiklikleri Kaydet</button></form> *@