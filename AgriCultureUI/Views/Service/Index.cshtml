@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    /* .c1
    {
     border:5px;
     
    } */
    table,tr,th
    {
   border: 1px solid black;
    }
    /* table{
        border-collapse:collapse;
    } */
</style>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Listesi</h4>
           
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Başlık
                            </th>
                            <th>
                               Sil
                            </th>
                            <th>
                                Düzenle
                            </th>
                           
                        </tr>
                   </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ServiceID</td>
                                <td>@item.Title</td>
                                <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Service/EditService/@item.ServiceID" class="btn btn-warning">Düzenle</a></td>
                            </tr>
                        }
                       
                    </tbody>
                </table>
                <br/>
                <a href="/Service/AddService/" class="btn btn-outline-info">Yeni Hizmet Girişi</a>
               
            </div>
        </div>
    </div>
</div>


